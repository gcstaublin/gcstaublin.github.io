<!-- -------------------
Styles
----------------- -->
<style>
  .header {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: var(--width-content-max);
    margin-left: auto;
    margin-right: auto;
    margin-block-end: 120px;
  }

  .header__inner {
    display: flex;
  }

  .nav {
    display: flex;
    margin-left: auto;
  }

  .nav__link {
    display: inline-block;
    padding: 1rem 0.75rem;
    font-size: var(--site-nav-type-size-link-small);
    color: var(--site-nav-color-link);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background-color 0.2s ease;

    &:hover {
      text-decoration: underline;
    }
  }

  .logo__container {
    position: relative;
    display: flex;
    margin: 0;
    align-items: center;
    justify-content: center;
    width: var(--logo-width);
    height: var(--logo-width);
    background-color: var(--logo-color-background);
    /* background-color: #5bb1a1; */
  }

  .banner__container {
    margin-block-end: 48px;
    & > * {
      margin: 0.15em;
    }
  }
</style>
